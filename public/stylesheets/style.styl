/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')
@import url('http://fonts.googleapis.com/css?family=Roboto:400,500,300,700')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 20px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px

.timeline
    table
      width 98%
      border-collapse collapse
      margin 0px 10px
      padding 0px
    #table-head
      background-color: rgba(255,255,255,0.1)
      margin-top 30px
    #table-head td
      border 0px
    #hours td
      font-size 16px
    #time
      font-size 50px

    td
      text-align center
      border 1px solid rgba(255,255,255,0.3)
      height 20px
      overflow-x auto
      margin-top 0px
      width 40px
      text-align center
      vertical-align middle
      font-weight 300
      font-size 12px
      color #fff

    #now
      width 2px
      background #fa5b4d




footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

body{
  background: -webkit-linear-gradient(left, #25c481, #25b7c4);
  background: linear-gradient(to right, #25c481, #25b7c4);
  font-family: 'Roboto', sans-serif;
}